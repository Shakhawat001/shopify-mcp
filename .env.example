# Shopify Admin API Credentials (for direct API access / dev)
# Domain format: your-shop-name.myshopify.com (no https://)
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxx

# === REQUIRED FOR PRODUCTION ===

# Public URL (with https://)
HOST=https://your-server.com

# Shopify App OAuth credentials (from Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# === DATABASE ===
POSTGRES_USER=shopify_mcp
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=shopify_mcp

# Prisma connection string (auto-generated in docker-compose, only needed for local dev)
DATABASE_URL=postgresql://shopify_mcp:your_secure_password_here@localhost:5432/shopify_mcp

# Session encryption key (32+ character random string)
# Generate with: openssl rand -hex 32
SESSION_ENCRYPTION_KEY=your_32_char_hex_key_here

# === OPTIONAL ===
PORT=38383
SERVER_PORT=38383
NODE_ENV=production
